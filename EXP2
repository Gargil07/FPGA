Descending order  
ORG 0000H 
MOV R1,#40H 
MOV R3,#0AH 
LOOP1 : MOV 02H,03H 
MOV B,@R1 
MOV 00H,01H 
INC R0 
LOOP2: MOV A,@R0 
CJNE A,B,CHECK 
MOV @R0,#00H 
SJMP CONTINUE 
CHECK :JC CONTINUE 
MOV @R0,B 
MOV @R1,A 
MOV B,@R1 
CONTINUE :INC R0 
DJNZ R2,LOOP2 
INC R1 
DJNZ R3, LOOP1 
SJMP $ 
END 


Ascending Order 
ORG 0000H 
MOV R1,#40H 
MOV R3,#0AH 
LOOP1 : MOV 02H,03H 
MOV B,@R1 
MOV 00H,01H 
INC R0 
LOOP2: MOV A,@R0 
CJNE A,B,CHECK 
MOV @R0,#00H 
SJMP CONTINUE 
CHECK :JNC CONTINUE 
MOV @R0,B 
MOV @R1,A 
MOV B,@R1 
CONTINUE :INC R0 
DJNZ R2,LOOP2 
INC R1 
DJNZ R3, LOOP1 
SJMP $ 
END 
